<div class="flex-info">
    <div class="image-viewer">
        <img src="{{motherbd.images.[0]}}" id="main-image" class="main-image" alt="{{motherbd.name}}">
        <div class="images-list">
            <img src="{{motherbd.images.[0]}}" alt="{{motherbd.brand}} {{motherbd.model}}">
            <img src="{{motherbd.images.[1]}}" alt="{{motherbd.brand}} {{motherbd.model}}">
            <img src="{{motherbd.images.[2]}}" alt="{{motherbd.brand}} {{motherbd.model}}">
        </div>
    </div>
    <div class="flex-item-processor-details">
        <p class="lg-flex-z" item-title>{{motherbd.brand}}</p>
        <p>Model:  {{motherbd.model}}</p>
        <p>Socket: {{motherbd.socket}}</p>
        <p>Chipset: {{motherbd.chipset}}</p>
        <p>RAM: {{motherbd.ram}}</p>
        <p>Storage: {{motherbd.storage}}</p>
        <p class="lg-flex-z" data-price>Price: <span class="strkthru">{{motherbd.oldPrice}}</span>&nbsp;{{motherbd.price}}</p>
        <form action="/">
            <div class="buttons">
                <a href="/motherboard/buy/{{motherbd.slug}}" class="buy-item">Buy Now</a>
                <a href="#" class="buy-item" add-to-cart>Add to Cart</a>
            </div>
        </form>
    </div>
